{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<section class="py-0" id="contact">

		<div class="container">
			<div class="row">
				<div class="col-lg-7 col-xxl-5 mx-auto text-center mt-5">
					<h5 class="fw-bold fs-3 fs-lg-5 lh-sm mb-5"></h5>
				</div>
			</div>
		</div>
		<!-- end of .container-->

	</section>

	<section class="py-5 mb-8">
		<div class="bg-holder" style="background-image:url(assets/img/illustrations/contact-us-bg.png);background-position:left bottom;background-size:auto;"></div>
		<!--/.bg-holder-->

		<div class="bg-holder" style="background-image:url(assets/img/gallery/contact-bg.png);background-position:center right ;background-size:contain;"></div>
		<!--/.bg-holder-->
		<div class="container">
			<div class="container">
				<div class="row">
					<div class="col-lg-7 col-xxl-5 mx-auto text-center mt-5">
						<h5 class="fw-bold fs-3 fs-lg-5 lh-sm mb-5">Sign In</h5>
					</div>
				</div>
			</div>
			<div class="row flex-center">
				<div class="col-lg-5 mb-5">
					<div class="card card-bg p-2">
						<div class="card-body">

							<form method="post">

								{% if error %}
									<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}

								{% if app.user %}
									<div class="mb-3">
										You are logged in as
										{{ app.user.username }},
										<a href="{{ path('app_logout') }}">Logout</a>
									</div>
								{% endif %}

								<div
									class="row mb-3 input-group-icon">

									<!--  <h1 class="h3 mb-3 font-weight-normal"> Sign In</h1> -->
									<label class="col-sm-2 col-form-label visually-hidden" for="inputEmail">Email</label>
									<div class="col-sm-12">
										<input class="form-control rounded-pill border-white input-box" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Write your e-mail" required autofocus>
										<svg class="bi bi-person-fill input-box-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16">
											<path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"></path>
										</svg>
									</div>
								</div>

								<div class="row mb-3 input-group-icon">
									<label class="col-sm-2 col-form-label visually-hidden" for="inputPassword">Password</label>
									<div class="col-sm-12">
										<input class="form-control rounded-pill border-white input-box" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Write your password" required>
										<svg class="bi bi-shield-lock-fill input-box-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16">
											<path d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.777 11.777 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7.159 7.159 0 0 0 1.048-.625 11.775 11.775 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.541 1.541 0 0 0-1.044-1.263 62.467 62.467 0 0 0-2.887-.87C9.843.266 8.69 0 8 0zm0 5a1.5 1.5 0 0 1 .5 2.915l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99A1.5 1.5 0 0 1 8 5z"></path>
										</svg>
									</div>
								</div>
								<input
								type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

								{#
																																																																        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																        See https://symfony.com/doc/current/security/remember_me.html
																																																																
																																																																        <div class="checkbox mb-3">
																																																																            <label>
																																																																                <input type="checkbox" name="_remember_me"> Remember me
																																																																            </label>
																																																																        </div>
																																																																    #}
								<div class="row">
									<div class="col-sm-12">
										<div class="d-grid">
											<button class="btn hover-top btn-glow btn-klean rounded-pill" type="submit">
												Sign in
											</button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
