{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
<section class="py-0" id="service">

	<div class="container">
		<div class="row">
			<div class="col-lg-7 col-xxl-5 mx-auto text-center py-7">
				<h5 class="fw-bold fs-3 fs-lg-5 lh-sm mb-3">Portfolio</h5>
				
				</p>
			</div>
		</div>
		<div class="bg-holder" style="background-image:url(img/illustrations/service.png);background-position:bottom center;background-size:contain;"></div>
		<!--/.bg-holder-->

		<div class="row flex-center circle-blend circle-blend-right circle-warning">
			<div class="col-xl-9">
				<div class="row justify-content-center circle">

					{% for categories  in categories %}
                    {% set img = categories.paints | last %}
						<div class="col-md-4 mb-4">
							<div class="card card-bg h-100 px-4 px-md-2 px-lg-3 px-xxl-4 pt-4">
								<div class="text-center"><img class="my-5" src="{{img.file}}" width="100" alt="services"/>
									<div class="card-body text-center text-md-start">
										<h6 class="fw-bold fs-1">{{categories.name}}</h6>
										<p class="mt-3 mb-md-0 mb-lg-3">{{categories.description |u.truncate(200,'...',false) }}</p>
										<a class="btn btn-lg ps-0 pe-3 text-primary" href="{{path ('portfolio_category',{'slug':categories.slug})}}" role="button">Learn more
											<svg class="bi bi-arrow-right-short" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" viewbox="0 0 16 16">
												<path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"></path>
											</svg>
										</a>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}


				</div>
			</div>
			
		</div>
	</div>
	<!-- end of .container-->

</section>
{% endblock %}
